# EMO Options Bot Environment Configuration
# Copy this file to .env and fill in your actual API keys and settings

# ============================================================================
# Core AI/LLM Providers
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_KEY_HERE
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000

# Anthropic Claude API Configuration  
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_KEY_HERE
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ============================================================================
# EMO Bot Runtime Configuration
# ============================================================================

# Environment: dev, staging, prod
EMO_ENV=dev

# Staging and Order Management
EMO_STAGING_DIR=ops/staged_orders
EMO_BACKUP_DIR=ops/staged_orders/backup
EMO_STAGE_ORDERS=1

# Logging Configuration
EMO_LOG_LEVEL=INFO
EMO_LOG_FILE=logs/emo_bot.log

# Database Configuration
EMO_DATABASE_URL=sqlite:///data/emo_options.db
EMO_DATABASE_POOL_SIZE=10

# ============================================================================
# Trading Providers & Market Data
# ============================================================================

# Alpaca Trading API (Paper Trading by Default)
ALPACA_KEY_ID=YOUR_ALPACA_KEY_ID
ALPACA_SECRET_KEY=YOUR_ALPACA_SECRET
ALPACA_API_BASE=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets/v2
ALPACA_PAPER_TRADING=1

# Polygon Market Data (Optional)
POLYGON_API_KEY=YOUR_POLYGON_KEY
POLYGON_BASE_URL=https://api.polygon.io

# ============================================================================
# Execution Modes & Order Routing
# ============================================================================

# Environment Control
EMO_ENV=development             # development | staging | production
EMO_ORDER_MODE=stage            # stage | paper | live
EMO_BROKER=alpaca               # alpaca | mock
EMO_LIVE_CONFIRM=               # set to I_UNDERSTAND_THE_RISK to allow live

# Options Chain Provider
EMO_OPTIONS_PROVIDER=alpaca     # alpaca | polygon

# ============================================================================
# Voice Interface Configuration
# ============================================================================

# Azure Speech Services
AZURE_SPEECH_KEY=YOUR_AZURE_SPEECH_KEY
AZURE_SPEECH_REGION=eastus

# Google Cloud Speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Voice Interface Settings
VOICE_ENABLED=0
VOICE_PROVIDER=text_fallback
VOICE_WAKE_WORD=emo bot

# ============================================================================
# Risk Management & Safety
# ============================================================================

# Position Sizing Limits
MAX_POSITION_SIZE_PCT=0.05
MAX_PORTFOLIO_RISK_PCT=0.10
MAX_SINGLE_TRADE_RISK=5000

# Risk Validation
RISK_VALIDATION_ENABLED=1
AUTO_APPROVAL_LIMIT=1000
REQUIRE_MANUAL_APPROVAL=1

# ============================================================================
# Dashboard & Web Interface
# ============================================================================

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8083
DASHBOARD_DEBUG=1

# Security
SECRET_KEY=your-secret-key-change-this
SESSION_TIMEOUT=3600

# ============================================================================
# Performance & Caching
# ============================================================================

# Options Chain Caching
OPTIONS_CACHE_TTL=300
SPOT_PRICE_CACHE_TTL=60

# Provider Timeouts
API_TIMEOUT=30
CHAIN_PROVIDER_TIMEOUT=10

# ============================================================================
# Monitoring & Alerting
# ============================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=1
HEALTH_CHECK_INTERVAL=60

# Monitoring
METRICS_ENABLED=0
METRICS_PORT=8084

# Error Reporting
ERROR_REPORTING_ENABLED=1
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=0

# ============================================================================
# Development & Testing
# ============================================================================

# Testing Configuration
TEST_MODE=0
MOCK_TRADING=1
SKIP_VALIDATION=0

# Debug Settings
DEBUG_LEVEL=INFO
VERBOSE_LOGGING=0
PROFILE_PERFORMANCE=0

# ============================================================================
# Advanced Configuration
# ============================================================================

# Provider Preferences (comma-separated, in order of preference)
LLM_PROVIDER_ORDER=openai,anthropic,mock
CHAIN_PROVIDER_ORDER=alpaca,polygon,yfinance,mock
VOICE_PROVIDER_ORDER=azure,google,text_fallback

# Feature Flags
ENABLE_LIVE_TRADING=0
ENABLE_PORTFOLIO_OPTIMIZATION=1
ENABLE_ADVANCED_GREEKS=1
ENABLE_ML_ANALYSIS=0

# Backup and Recovery
AUTO_BACKUP_ENABLED=1
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=1